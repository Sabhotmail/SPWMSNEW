# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Database
# Replace with your production database credentials
DATABASE_URL="postgresql://spwms_user:your-secure-password@localhost:5432/spwms_production?schema=public"

# NextAuth
# Generate a secret: openssl rand -base64 32
AUTH_SECRET="CHANGE-THIS-TO-A-RANDOM-SECRET-IN-PRODUCTION"
# Replace with your production domain
NEXTAUTH_URL="https://wms.yourdomain.com"

# App
NEXT_PUBLIC_APP_NAME="SP WMS"
NEXT_PUBLIC_APP_VERSION="2.0.0"

